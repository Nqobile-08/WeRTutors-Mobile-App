<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
tools:context=".TutorExpandedFragment"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:padding="16dp">

<TextView
    android:id="@+id/tvLocation"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="Location"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="10dp"
    app:layout_constraintStart_toEndOf="@+id/ivLocation"
    app:layout_constraintTop_toBottomOf="@+id/tvDescription" />

<TextView
    android:id="@+id/tvTutorName"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:textSize="20dp"
    android:layout_marginLeft="15dp"
    android:textStyle="bold"
    android:text="Tutor Name"
    app:layout_constraintStart_toEndOf="@+id/ivProfilePic"
    app:layout_constraintTop_toTopOf="parent" />

<TextView
    android:id="@+id/tvRating"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:textSize="20dp"
    android:text="Rating"
    app:layout_constraintStart_toEndOf="@+id/tvTutorName"
    app:layout_constraintTop_toTopOf="parent" />

<ImageView
    android:id="@+id/ivLanguage"
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:src="@drawable/language_icon"
    app:layout_constraintEnd_toStartOf="@+id/tvLanguage"
    app:layout_constraintStart_toEndOf="@+id/ivProfilePic"
    app:layout_constraintTop_toBottomOf="@+id/tvLocation" />

<ImageView
    android:id="@+id/ivLocation"
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:src="@drawable/location_icon"
    app:layout_constraintEnd_toStartOf="@+id/tvLocation"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="15dp"
    app:layout_constraintStart_toEndOf="@+id/ivProfilePic"
    app:layout_constraintTop_toBottomOf="@+id/tvDescription"/>

<TextView
    android:id="@+id/tvLanguage"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="Language"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="5dp"
    app:layout_constraintStart_toEndOf="@+id/ivLocation"
    app:layout_constraintTop_toBottomOf="@+id/tvLocation" />

<TextView
    android:id="@+id/tvDescription"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="10dp"
    android:text="Descripition"
    app:layout_constraintStart_toEndOf="@+id/ivProfilePic"
    app:layout_constraintTop_toBottomOf="@+id/tvTutorName" />

<TextView
    android:id="@+id/tvRate"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="Rate"
    android:textSize="20dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<ImageView
    android:id="@+id/ivProfilePic"
    android:layout_width="120dp"
    android:layout_height="120dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    style="@style/RoundCorners"
    android:scaleType="centerCrop"
    android:src="@drawable/icon"/>

<LinearLayout
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="15dp"
    app:layout_constraintTop_toBottomOf="@+id/ivProfilePic"
    android:weightSum="3">

    <Button
        android:id="@+id/btnAbout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="About"
        android:gravity="center"
        android:background="?android:attr/selectableItemBackground"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/btnLevelsSubjects"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Levels and subjects"
        android:gravity="center"
        android:background="?android:attr/selectableItemBackground"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/btnReviews"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Reviews"
        android:gravity="center"
        android:background="?android:attr/selectableItemBackground"
        android:textColor="@android:color/black"/>

</LinearLayout>

<TextView
    android:id="@+id/tvAboutTutor"
    android:layout_width="match_parent"
    android:layout_height="480dp"
    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
    android:layout_marginTop="10dp"
    android:text="About Tutors"/>

<TextView
    android:id="@+id/tvLevelsAndSubjects"
    android:layout_width="match_parent"
    android:layout_height="480dp"
    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
    android:layout_marginTop="10dp"
    android:text="LEVELS AND SUBJECTS"
    android:visibility="invisible"/>


<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/rvReviews"
    android:layout_width="match_parent"
    android:layout_height="480dp"
    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
    android:layout_marginTop="10dp"
    tools:listitem="@layout/item_review"/>




</androidx.constraintlayout.widget.ConstraintLayout>