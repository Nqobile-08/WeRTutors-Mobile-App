<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/tutors" />

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoImageView"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"/>

    <EditText
        android:id="@+id/appointmentEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/calendarView"
        android:layout_marginTop="16dp"
        android:hint="Enter appointment" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appointmentEditText"
        android:layout_marginTop="16dp"
        android:text="Add Appointment" />

    <Button
        android:id="@+id/removeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appointmentEditText"
        android:layout_toRightOf="@id/addButton"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:text="Remove Appointment" />

    <TextView
        android:id="@+id/appointmentsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/removeButton"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:text="Appointments"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
