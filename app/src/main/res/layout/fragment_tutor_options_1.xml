<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nqobza.wetutors.tutorOptions_1">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:id="@+id/rvTutors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etSearchBar" />
<ImageView
    android:id="@+id/ivFilter"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:src="@drawable/filter_icon"
    app:layout_constraintStart_toEndOf="@+id/etSearchBar"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="14dp"
    android:layout_marginLeft="15dp"/>

    <ImageView
        android:id="@+id/icSearch"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/search_icon"
        app:layout_constraintEnd_toStartOf="@+id/etSearchBar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="14dp"/>


    <EditText
        android:id="@+id/etSearchBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Filter by tutor or subject name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>